<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="lab5.MainController" spacing="10" alignment="TOP_CENTER" prefWidth="600" prefHeight="400">

    <VBox spacing="10" alignment="CENTER">
        <TextField fx:id="inputField" promptText="Введите 'Фамилия Имя Отчество'" />
        <Button text="Добавить" fx:id="addButton"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <CheckBox fx:id="selectLastNameCheckBox" text="Фамилия"/>
        <CheckBox fx:id="selectMiddleNameCheckBox" text="Отчество"/>
        <Button text="Показать отсортированные" fx:id="sortButton"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <VBox spacing="5" alignment="CENTER">
            <Label text="Фамилия"/>
            <ListView fx:id="lastNameListView" prefWidth="150" prefHeight="200"/>
        </VBox>
        <VBox spacing="5" alignment="CENTER">
            <Label text="Имя"/>
            <ListView fx:id="firstNameListView" prefWidth="150" prefHeight="200"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Отчество" alignment="CENTER"/>
            <ListView fx:id="middleNameListView" prefWidth="150" prefHeight="200"/>
        </VBox>
    </HBox>
</VBox>
